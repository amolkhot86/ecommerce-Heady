<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_margin="2dp"
        android:layout_height="wrap_content" android:background="#e6ccff">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:background="#8059a6"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:lines="1"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:padding="2dp"
            android:layout_height="wrap_content" android:layout_marginTop="42dp">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="Added On : "
                    />
                <TextView
                    android:id="@+id/added_on_text"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="09 Dec 2016"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_count_cont"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:text="Item Viewed : "
                    />
                <TextView
                    android:id="@+id/view_count_text"
                    android:layout_width="match_parent"
                    android:layout_weight="3.5"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="1000 times"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/order_count_cont"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:text="Item Ordered : "
                    />
                <TextView
                    android:id="@+id/ordered_count_text"
                    android:layout_width="match_parent"
                    android:layout_weight="3.5"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="1000 times"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_count_cont"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:text="Item Shared : "
                    />
                <TextView
                    android:id="@+id/shared_count_text"
                    android:layout_width="match_parent"
                    android:layout_weight="3.5"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="1000 times"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#00000000">
                <GridView
                    android:id="@+id/variant_grid"
                    android:background="#00000000"
                    tools:listitem="@layout/variants_listitem"
                    android:horizontalSpacing="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" android:numColumns="2">
                </GridView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:text="Price : "
                    />
                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="match_parent"
                    android:layout_weight="3.5"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="-"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:weightSum="5">
                <TextView
                    android:id="@+id/final_price_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.7"
                    android:text="With VAT(12.5%)"
                    />
                <TextView
                    android:id="@+id/final_price_text"
                    android:layout_width="match_parent"
                    android:layout_weight="3.3"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="-"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>